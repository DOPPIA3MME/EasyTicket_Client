<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amazonaws.rds.eu_central_1.cxjgpctcq5m4.dbingsoftware.appminieri.Profilo">




    <View
        android:id="@+id/divider"
        android:layout_width="358dp"
        android:layout_height="380dp"
        android:background="#f9fca5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/divider"
        android:layout_alignTop="@+id/divider"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="-12dp"
        android:text="PAGAMENTO"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/amex"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/visa"
       android:layout_alignTop="@+id/divider"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_alignLeft="@+id/divider"
        />

    <TextView
        android:id="@+id/postepayt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_alignLeft="@+id/buttonConferma"
        android:layout_alignTop="@+id/divider"
        android:text="VISA"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginRight="-4dp" />

    <EditText
        android:id="@+id/postepay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postepayt"
        android:layout_alignLeft="@+id/postepayt"
        android:layout_marginRight="25dp"
        android:layout_alignRight="@id/divider"
        android:maxLength="19"
        android:inputType="phone"
        android:textColor="#000000" />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/mastercard"
        android:layout_alignTop="@+id/amex"
        android:layout_marginTop="100dp"
        android:layout_alignLeft="@+id/amex"
        />


    <TextView
        android:id="@+id/mastercardt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/postepayt"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/postepay"
        android:text="MASTERCAD"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/mastercard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mastercardt"
        android:layout_alignLeft="@+id/postepayt"
        android:layout_marginRight="25dp"
        android:layout_alignRight="@id/divider"
        android:maxLength="19"
        android:inputType="phone"
        android:textColor="#000000" />


    <ImageView
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:src="@drawable/amex"
        android:layout_alignTop="@+id/mastercard"
        android:layout_marginTop="70dp"
        android:layout_alignLeft="@+id/amex"
        />

    <TextView
        android:id="@+id/americant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/mastercard"
        android:text="AMERICAN EXPRESS"
        android:textColor="@color/colorPrimary"
        android:layout_alignLeft="@+id/postepayt"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/americanexpress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/americant"
        android:layout_alignLeft="@+id/postepayt"
        android:layout_marginRight="25dp"
        android:layout_alignRight="@id/divider"
        android:maxLength="19"
        android:inputType="phone"
        android:textColor="#000000" />


    <Button
        android:id="@+id/buttonConferma"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="-20dp"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:text="Conferma"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        />





</RelativeLayout>