<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            >
            <solid
                android:color="#ff000f" />
            <stroke
                android:width="0dp"
                android:color="?attr/colorPrimary" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape >
            <gradient
                android:startColor="?attr/colorPrimary"
                android:endColor="?attr/colorPrimary"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="?attr/colorPrimary" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>